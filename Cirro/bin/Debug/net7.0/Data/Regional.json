{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",

    "parameters": {
      "projectName": {
        "type": "string"
      },
      "location": {
        "type": "string",
        "defaultValue": "[resourceGroup().location]"
      },
      "linuxFxVersion": {
        "type": "string"
      },
      "services": {
        "type": "array"
      }
    },
    "variables": {
      "globalResourceGroupName": "[format('{0}-Global', parameters('projectName'))]",
      "webPlanName": "[format('WebPlan-{0}', parameters('projectName'))]",
      "regionalWebAppName": "[format('{0}Web-{1}', parameters('projectName'), parameters('location'))]",
      "managedIdentityName": "[format('{0}-managedidentity', parameters('projectName'))]"
    },
    "resources": [
      {
      "condition": "[contains(parameters('services'), 'WebApp')]",
      "type": "Microsoft.Web/sites",
        "apiVersion": "2022-03-01",
        "name": "[variables('regionalWebAppName')]",
        "location": "[parameters('location')]",
        "properties": {
          "httpsOnly": true,
          "serverFarmId": "[resourceId(variables('globalResourceGroupName'), 'Microsoft.Web/serverfarms', variables('webPlanName'))]",
          "siteConfig": {
            "linuxFxVersion": "[parameters('linuxFxVersion')]",
            "minTlsVersion": "1.2"
          }
        },
        "identity": {
          "type": "userAssigned",
          "userAssignedIdentities": {
              "[resourceID(variables('globalResourceGroupName'), 'Microsoft.ManagedIdentity/userAssignedIdentities/', variables('managedIdentityName'))]": {}
          }
        }
      }
    ]
  }