{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "projectName": {
      "type": "string"
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]"
    },
    "services": {
      "type": "array"
    }
  },
  "variables": {
    "globalResourceGroupName": "[format('{0}-Global', parameters('projectName'))]",
    "managedIdentityResourceId": "[resourceID(variables('globalResourceGroupName'), 'Microsoft.ManagedIdentity/userAssignedIdentities/', format('{0}-managedidentity', parameters('projectName')))]",
    "cosmosName": "[format('{0}cosmos', parameters('projectName'))]",
    "keyVaultName": "[format('{0}-kv-{1}', parameters('projectName'), parameters('location'))]"
  },
  "resources": [
    {
      "type": "Microsoft.KeyVault/vaults/secrets",
      "apiVersion": "2021-11-01-preview",
      "name": "[format('{0}/{1}', take(variables('keyVaultName'),24), 'CosmosConnection')]",
      "properties": {
        "value": "[listConnectionStrings(resourceId(variables('globalResourceGroupName'),'Microsoft.DocumentDB/databaseAccounts', take(toLower(concat(variables('cosmosName'), uniqueString(concat(subscription().id, '/resourceGroups/', variables('globalResourceGroupName'))))),44)), '2019-12-12').connectionStrings[0].connectionString]"
      }
    }
  ]
}