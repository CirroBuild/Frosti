{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",

    "parameters": {
      "projectName": {
        "type": "string"
      },
      "location": {
        "type": "string",
        "defaultValue": "[resourceGroup().location]"
      },
      "linuxFxVersion": {
        "type": "string"
      },
      "services": {
        "type": "array"
      }
    },
    "variables": {
      "globalResourceGroupName": "[format('{0}-Global', parameters('projectName'))]",
      "webPlanName": "[format('Plan-{0}', parameters('projectName'))]",
      "regionalWebAppName": "[format('{0}Web-{1}', parameters('projectName'), parameters('location'))]",
      "keyVaultName": "[format('{0}-kv-{1}', parameters('projectName'), parameters('location'))]",
      "managedIdentityResourceId": "[resourceID(variables('globalResourceGroupName'), 'Microsoft.ManagedIdentity/userAssignedIdentities/', format('{0}-managedidentity', parameters('projectName')))]"
    },
    "resources": [
      {
        "condition": "[contains(parameters('services'), 'WebApp')]",
        "type": "Microsoft.Web/sites",
        "apiVersion": "2022-03-01",
        "name": "[variables('regionalWebAppName')]",
        "location": "[parameters('location')]",
        "properties": {
          "httpsOnly": true,
          "serverFarmId": "[resourceId(variables('globalResourceGroupName'), 'Microsoft.Web/serverfarms', variables('webPlanName'))]",
          "siteConfig": {
            "linuxFxVersion": "[parameters('linuxFxVersion')]",
            "minTlsVersion": "1.2"
          }
        },
        "identity": {
          "type": "userAssigned",
          "userAssignedIdentities": {
              "[variables('managedIdentityResourceId')]": {}
          }
        }
      },
      {
        "condition": "[contains(parameters('services'), 'KeyVault')]",
        "type": "Microsoft.KeyVault/vaults",
        "apiVersion": "2022-07-01",
        "name": "[variables('keyVaultName')]",
        "location": "[parameters('location')]",
        "properties": {
          "enabledForDeployment": true,
          "enabledForDiskEncryption": true,
          "enabledForTemplateDeployment": true,
          "tenantId": "[subscription().tenantId]",
          "accessPolicies": [
            {
              "objectId": "[reference(variables('managedIdentityResourceId'), '2022-01-31-preview').principalId]",
              "tenantId": "[subscription().tenantId]",
              "permissions": {
                "keys": "all",
                "secrets": "all",
                "certificates": "all"
              }
            }
          ],
          "sku": {
            "name": "standard",
            "family": "A"
          }
        }
      }
    ]
  }