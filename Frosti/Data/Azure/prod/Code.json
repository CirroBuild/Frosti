{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]"
    },
    "primaryRegionResourceGroupName": {
      "type": "string"
    },
    "webPlanName": {
      "type": "string"
    },
    "webAppName": {
      "type": "string"
    },
    "linuxFxVersion": {
      "type": "string"
    },
    "packageLink": {
      "type": "string"
    },
    "services": {
      "type": "array"
    }
  },
  "resources": [
    {
      "condition": "[and(contains(parameters('services'), 'WebApp'), contains(parameters('services'), 'DevUser'))]",
      "type": "Microsoft.Web/sites",
      "apiVersion": "2022-03-01",
      "name": "[parameters('webAppName')]",
      "location": "[parameters('location')]",
      "properties": {
        "httpsOnly": true,
        "serverFarmId": "[resourceId(parameters('primaryRegionResourceGroupName'), 'Microsoft.Web/serverfarms', parameters('webPlanName'))]",
        "siteConfig": {
          "linuxFxVersion": "[parameters('linuxFxVersion')]",
          "minTlsVersion": "1.2"
        }
      },
      "resources": [
        {
          "type": "extensions",
          "apiVersion": "2022-03-01",
          "name": "MSDeploy",
          "properties": {
            "appOffline": "true",
            "packageUri": "[parameters('packageLink')]"
          },
          "dependsOn": [
            "[resourceId('Microsoft.Web/sites/',parameters('webAppName'))]"
          ]
        }
      ]
    }
  ]
}